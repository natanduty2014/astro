---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Button from "../components/Button.astro";
---

<Layout title="Home">
	<Header />
	<main
		class="mt-16 xl:mt-24 px-8 md:px-12 xl:px-28 flex flex-col xl:flex-row-reverse xl:items-center"
	>
		<img
			src="undraw_on_the_way_re_swjt.svg"
			alt="Illustration of a person walking"
		/>
		<div class="flex flex-col gap-8 items-center xl:items-start text-center xl:text-left">
			<h1 class="text-4xl xl:text-6xl font-bold">
				Welcome to Astro
				<span class="text-cyan-600 dark:text-cyan-400">Tody</span>
			</h1>
			<p class="md:text-xl">
				Astro is a new kind of static site generator that delivers
				lightning-fast performance.
			</p>
			<Button />
		</div>
	</main>
</Layout>
